generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("PRISMA_DATABASE_URL")
}

model User {
  id              String    @id @unique @default(cuid())
  provider_id     String    @unique
  hashed_password String?
  session         Session[]
  username        String
  email           String?
  avatar_url      String?

  @@map("user")
}

model Session {
  id           String @id @unique
  user_id      String
  expires      BigInt
  idle_expires BigInt
  user         User   @relation(fields: [user_id], references: [id], onDelete: Cascade)

  @@index([user_id])
  @@map("session")
}

model AuthorizationPolicy {
  id           String        @id @unique @default(cuid())
  organization Organization?
}

model Organization {
  id                    String              @id @unique @default(cuid())
  name                  String
  picture_url           String
  policy                AuthorizationPolicy @relation(fields: [authorizationPolicyId], references: [id])
  authorizationPolicyId String              @unique

  @@map("organization")
}

enum Role {
  USER
  ADMIN
}
